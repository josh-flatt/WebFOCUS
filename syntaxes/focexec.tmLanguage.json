{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "focexec",
	"scopeName": "source.fex",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#dialogue-manager"
		},
		{
			"include": "#file-define"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"dialogue-manager": {
			"match": "^(-)(CLOSE|DEFAULT|DEFAULTH|DOS|EXIT|\\?|GOTO|HTMLFORM|IF|INCLUDE|label|MVS|PASS|QUIT( FOCUS)?|READ|READFILE|REPEAT|RUN|SET|TSO|TYPE|UNIX|VMS|WINNT|WRITE)\\b",
			"name": "keyword.control.focexec"
		},
		"file-define": {
			"name": "keyword.control.focexec",
			"begin": "^(DEFINE|TABLE) FILE",
			"end": "END",
			"patterns": [
				{
					"include": "#variables"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#control"
				},
				{
					"include": "#by-column"
				},
				{
					"include": "#table-condition"
				},
				{
					"include": "#prints"
				},
				{
					"include": "#table-hold"
				},
				{
					"include": "#table-name"
				}
			]
		},
		"table-name": {
			"match": "(\\w+)",
			"name": "entity.name.function.focexec"
		},
		"table-column": {
			"match": "(\\w|\\*)",
			"name": "entity.name.tag.focexec"
		},
		"prints": {
			"name": "keyword.control.focexec",
			"begin": "^(PRINT)",
			"end": "^(WHERE|BY|ON)",
			"patterns": [
				{
					"include": "#table-column"
				}
			]
		},
		"table-hold": {
			"name": "",
			"begin": "^ON TABLE HOLD",
			"end": "$",
			"patterns": [
				{
					"include": "#field-modifiers"
				},
				{
					"include": "#table-name"
				}
			]
		},
		"by-column": {
			"name": "keyword.control.focexec",
			"begin": "^(BY)",
			"end": "$",
			"patterns": [
				{
					"include": "#table-column"
				}
			]
		},
		"table-condition": {
			"name": "keyword.control.focexec",
			"begin": "^(WHERE|IF)",
			"end": "$",
			"patterns": [
				{
					"include": "#variables"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#operators"
				},
				{
					"include": "#control"
				},
				{
					"include": "#comparisons"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#table-column"
				},
				{
					"include": "#variables"
				},
				{
					"include": "#table-name"
				}
			]
		},
		"comments": {
			"match": "-\\*([^\\n]*)",
			"name": "comment.line.focexec"
		},
		"strings": {
			"match": "'([^']*)'",
			"name": "string.quoted.single.webfocus"
		},
		"keywords": {
			"match": "\\b(?:DEFINE|TABLE|COLUMN|SUM|BY)\\b",
			"name": "keyword.control.webfocus"
		},
		"comparisons": {
			"match": "\\b(EQ|NE|LE|LT|GE|GT|IN|IS|NOT|CONTAINS|LIKE|OR|AND)\\b",
			"name": "keyword.operator.focexec"
		},
		"field-modifiers": {
			"match": "\\b(AS|HOLDLIST|FORMAT|MISSING|SHOWBLANKS|STYLE|COMPOUND|MSG|INDEX|LINES)\\b",
			"name": "support.type.property-name.focexec"
		},
		"operators": {
			"match": "\\+|-|\\*|/|=",
			"name": "keyword.operator.webfocus"
		},
		"numbers": {
			"match": "\\b\\d+\\b",
			"name": "constant.numeric.webfocus"
		},
		"variables": {
			"match": "\\&[a-zA-Z_][a-zA-Z0-9_]*",
			"name": "variable.other.focexec"
		},
		"control": {
			"match": "(\\(|\\)|\\;|\\,)",
			"name": "constant.other.focexec"
		}
	}
}